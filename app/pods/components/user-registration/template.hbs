{{#hoc-form formClass='reg-form' onFormSubmit=(perform registerUser name email password confirmPassword) as |form|}}

  {{#form.fields  fieldClass='reg-form__field-wrapper' as |field|}}
    {{field.input name 'Name' 'Your name' inputClass='reg-form__input'}}
    {{field.input email 'Email' 'Some description' inputClass='reg-form__input'}}
    {{field.input password 'Password' 'Password' type='password' inputClass='reg-form__input'}}
    {{field.input confirmPassword 'Password' 'Repeat password' type='password' inputClass='reg-form__input'}}
  {{/form.fields}}

  {{#form.buttons buttonsClass='reg-form__button-wrapper' as |button|}}
    {{button.button 'reset' 'Cancel' buttonClass='reg-form__button--reset'}}
    {{button.button 'submit' 'Submit' buttonClass='reg-form__button--submit'}}
  {{/form.buttons}}

  {{#if error}}
    <p class='error-comunicat'>Error: {{error}}</p>
  {{/if}}

{{/hoc-form}}
