<article class="post__item">
  <div class="post__header">
    <div class="post__category visually-hidden">{{model.category}}</div>
    <h3 class="post__title">{{model.title}}</h3>
    <div class="post__info">
      <span class="post__date">
        <time datetime={{this.dateTime}}>{{this.dateTimeShow}}</time>
      </span>
      <span class="post__divider"></span>
      <span class="post__duration">{{this.readingTime}}</span>
    </div>
  </div>
  <figure class="post__image">
    <img src={{model.imgUrl}} alt={{model.imgAlt}}>
    <figcaption class="post__image-caption">{{model.imgCapt}}</figcaption>
  </figure>
  <div class="post__body">
    {{{model.body}}}
  </div>
</article>
<section class="post__comments">
  <h1>Comments go here</h1>
  <div class="post-comment__wrapper">
    {{#if model.comments}}
      {{#each model.comments as |comment|}}
        <PostComment @comment={{comment}} @showReply=true />
      {{/each}}
    {{else}}
      <h2>No comments yet</h2>
    {{/if}}
  </div>
  <div class="reply-form__wrapper">
    <CommentForm @comment={{model}} />
  </div>
</section>
